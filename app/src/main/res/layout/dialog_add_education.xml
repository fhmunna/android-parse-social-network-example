<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView android:id="@+id/layout_basic_info"
    style="@style/cardViewStyleNew"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">


    <LinearLayout
        android:id="@+id/studentLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="visible">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Institution"/>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="name of Institution"
                    android:textColor="@color/Black" />

                <EditText
                    android:id="@+id/institutionName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textEmailAddress"
                    android:maxLines="1"
                    android:singleLine="true" />

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Degree"
                    android:textColor="@color/Black" />

                <EditText
                    android:id="@+id/degree"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:maxLines="1"
                    android:singleLine="true" />

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Field of study"
                    android:textColor="@color/Black" />

                <EditText
                    android:id="@+id/fieldOfStudy"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:maxLines="1"
                    android:singleLine="true" />


                <TextView
                    android:id="@+id/textView_som"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Starting date"
                    android:textColor="@color/Black" />

                <EditText
                    android:id="@+id/startingDate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:hint="Click Here to set date"
                    android:maxLines="1"
                    android:singleLine="true" />
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp">


                    <TextView
                        android:id="@+id/textView4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="I currently Study here"
                        android:textColor="@color/Black" />

                    <CheckBox
                        android:id="@+id/isCurrent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="true"/>

                </LinearLayout>


                <!--               <EditText
                                   android:id="@+id/isCurrent"
                                   android:layout_width="match_parent"
                                   android:layout_height="wrap_content"
                                   android:maxLines="1"
                                   android:singleLine="true" />-->


                <LinearLayout
                    android:id="@+id/institutionendingLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:orientation="vertical">



                    <TextView
                        android:id="@+id/textView5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="endingDate"
                        android:textColor="@color/Black" />

                    <EditText
                        android:id="@+id/endingDate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:hint="Click Here to set date"
                        android:maxLines="1"
                        android:singleLine="true" />



                </LinearLayout>



                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="description"
                    android:textColor="@color/Black" />

                <EditText
                    android:id="@+id/description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:singleLine="true" />




                <Button
                    android:id="@+id/profile_category_save_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="save"
                    android:textColor="@color/Black"
                    android:textSize="12sp" />
            </LinearLayout>

        </ScrollView>

    </LinearLayout>







</android.support.v7.widget.CardView>